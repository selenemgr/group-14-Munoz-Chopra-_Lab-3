@model IEnumerable<group_14_Munoz_Chopra__Lab_3.Models.ViewModels.PodcastViewModel>
@{
    ViewData["Title"] = "My Subscriptions";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-heart-fill me-2 text-danger"></i> My Subscriptions
        </h1>
        <p class="text-muted">All the podcasts you’re currently subscribed to 🎧</p>
    </div>

    @if (Model != null && Model.Any())
    {
            <div class="row g-4">
            @foreach (var podcast in Model)
            {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 rounded-4 hover-shadow transition">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h5 class="card-title fw-bold">
                                            <a asp-controller="Podcast" asp-action="Details" asp-route-id="@podcast.PodcastID"
                                               class="text-decoration-none text-dark stretched-link">
                                        @podcast.Title
                                            </a>
                                        </h5>
                                        <p class="card-text text-muted small">@podcast.Description</p>
                                    </div>

                                    <div class="mt-3 pt-2 border-top small text-secondary">
                                        <p class="mb-1">
                                            <i class="bi bi-person-circle text-primary me-1"></i>
                                            Created by: <strong>@podcast.CreatorUsername</strong>
                                        </p>
                                        <p class="mb-0">
                                            <i class="bi bi-people-fill text-success me-1"></i>
                                            Subscribers: <strong>@podcast.SubscriberCount</strong>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="text-center py-5">
                <i class="bi bi-emoji-frown fs-1 text-muted"></i>
                <p class="mt-3 text-muted fs-5">You are not subscribed to any podcasts yet.</p>
                <a asp-controller="Podcast" asp-action="Index" class="btn btn-primary rounded-pill mt-3">
                    <i class="bi bi-mic-fill me-2"></i> Explore Podcasts
                </a>
            </div>
    }
</div>

<!-- Optional hover effect -->
<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.2s ease-in-out;
    }
</style>

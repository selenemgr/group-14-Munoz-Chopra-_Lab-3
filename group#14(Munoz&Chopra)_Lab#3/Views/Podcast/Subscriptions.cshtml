@model IEnumerable<group_14_Munoz_Chopra__Lab_3.Models.ViewModels.PodcastViewModel>

<h2>My Subscriptions</h2>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var podcast in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Podcast" asp-action="Details" asp-route-id="@podcast.PodcastID">
                                @podcast.Title
                            </a>
                        </h5>
                        <p class="card-text">@podcast.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Created by: @podcast.CreatorUsername</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Subscribers: @podcast.SubscriberCount</small>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>You are not subscribed to any podcasts yet.</p>
}

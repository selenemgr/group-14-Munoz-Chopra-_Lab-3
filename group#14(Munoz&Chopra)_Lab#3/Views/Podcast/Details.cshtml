@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model group_14_Munoz_Chopra__Lab_3.Models.ViewModels.PodcastDetailsViewModel

@{
    ViewData["Title"] = "Podcast Details";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role"); // ✅ get role from session
}

<div class="container py-5">
    <!-- Back Button -->
    <a asp-controller="Podcast" asp-action="Index" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left-circle"></i> Back to All Podcasts
    </a>

    <!-- Podcast Header Card -->
    <div class="card shadow-sm border-0 rounded-4 mb-5">
        <div class="card-body">
            <h2 class="fw-bold text-primary mb-2">@Model.Title</h2>
            <p class="text-muted">@Model.Description</p>

            <div class="d-flex flex-wrap gap-3 mt-3">
                <div class="badge bg-light text-dark border">
                    <i class="bi bi-person-circle me-1 text-primary"></i> Created by:
                    <strong>@Model.CreatorUsername</strong>
                </div>
                <div class="badge bg-light text-dark border">
                    <i class="bi bi-calendar3 me-1 text-success"></i> Created on:
                    @Model.CreatedDate.ToString("yyyy-MM-dd")
                </div>
                <div class="badge bg-light text-dark border">
                    <i class="bi bi-people-fill me-1 text-info"></i> Subscribers:
                    <strong>@Model.SubscriberCount</strong>
                </div>
            </div>

            <!-- Subscribe/Unsubscribe Button -->
            <form asp-action="Subscribe" asp-controller="Podcast" method="post" class="mt-4">
                <input type="hidden" name="podcastId" value="@Model.PodcastID" />
                @if (Model.IsSubscribed)
                {
                    <button type="submit" formaction="@Url.Action("Unsubscribe", "Podcast")"
                            class="btn btn-outline-danger rounded-pill px-4">
                        <i class="bi bi-x-circle me-1"></i> Unsubscribe
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-plus-circle me-1"></i> Subscribe
                    </button>
                }
            </form>
        </div>
    </div>

    <!-- Episodes Section -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="fw-bold text-primary mb-0">
                    <i class="bi bi-list-music me-2"></i> Episodes
                </h4>

                <!-- ✅ Add New Episode Button (works with Session role) -->
                @if (role == "Admin" || role == "Podcaster")
                {
                    <a asp-controller="Episode" asp-action="Create" asp-route-podcastId="@Model.PodcastID"
                       class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-plus-circle me-1"></i> Add New Episode
                    </a>
                }
            </div>

            @if (Model.Episodes != null && Model.Episodes.Any())
            {
                <div class="table-responsive">
                    <table class="table align-middle table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>Title</th>
                                <th>Release Date</th>
                                <th>Duration (min)</th>
                                <th>Play Count</th>
                                <th>Views</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var episode in Model.Episodes)
                            {
                                <tr>
                                    <td class="fw-semibold">@episode.Title</td>
                                    <td>@episode.ReleaseDate.ToString("yyyy-MM-dd")</td>
                                    <td>@episode.DurationMinutes</td>
                                    <td>@episode.PlayCount</td>
                                    <td>@episode.NumberOfViews</td>
                                    <td class="text-center">
                                        <a asp-controller="Episode" asp-action="Details" asp-route-id="@episode.EpisodeID"
                                           class="btn btn-outline-primary btn-sm rounded-pill me-1">
                                            <i class="bi bi-play-circle me-1"></i> View
                                        </a>

                                        <!-- ✅ Edit/Delete visible for Admin/Podcaster -->
                                        @if (role == "Admin" || role == "Podcaster")
                                        {
                                            <a asp-controller="Episode" asp-action="Edit" asp-route-id="@episode.EpisodeID"
                                               class="btn btn-outline-success btn-sm rounded-pill me-1">
                                                <i class="bi bi-pencil me-1"></i> Edit
                                            </a>

                                            <form asp-controller="Episode" asp-action="Delete" method="post"
                                                  class="d-inline" onsubmit="return confirm('Delete this episode?');">
                                                <input type="hidden" name="id" value="@episode.EpisodeID" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                                    <i class="bi bi-trash me-1"></i> Delete
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted fst-italic">No episodes available for this podcast yet.</p>
            }
        </div>
    </div>
</div>

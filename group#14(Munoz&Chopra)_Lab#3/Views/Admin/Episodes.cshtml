@model IEnumerable<group_14_Munoz_Chopra__Lab_3.Models.Episode>
@{
    ViewData["Title"] = "Manage Episodes";
}

<div class="container py-4">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left-circle"></i> Back to Admin Dashboard
    </a>
    <h2 class="fw-bold text-success mb-4">
        <i class="bi bi-music-note-beamed me-2"></i>Manage Episodes
    </h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-5">
            <input type="text" name="q" class="form-control" placeholder="Search by title or podcast..." value="@Context.Request.Query["q"]" />
        </div>
        <div class="col-md-5">
            <input type="text" name="host" class="form-control" placeholder="Search by host..." value="@Context.Request.Query["host"]" />
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
            <div class="alert alert-info">No episodes found.</div>
    }
    else
    {
            <table class="table table-striped shadow-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Podcast</th>
                        <th>Host</th>
                        <th>Release Date</th>
                        <th>Views</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var episode in Model)
                {
                            <tr>
                                <td>@episode.Title</td>
                                <td>@episode.Podcast?.Title</td>
                                <td>@episode.Podcast?.Creator?.Username</td>
                                <td>@episode.ReleaseDate.ToShortDateString()</td>
                                <td>
                            <form asp-action="UpdateViews" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="episodeId" value="@episode.EpisodeID" />
                                        <input type="number" name="views" value="@episode.NumberOfViews" min="0" class="form-control form-control-sm me-2" style="width:100px;" />
                                        <button type="submit" class="btn btn-sm btn-outline-success">Update</button>
                                    </form>
                                </td>
                                <td>
                                    <form asp-action="DeleteEpisode" method="post" onsubmit="return confirm('Delete this episode?');">
                                        <input type="hidden" name="episodeId" value="@episode.EpisodeID" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                }
                </tbody>
            </table>
    }
</div>

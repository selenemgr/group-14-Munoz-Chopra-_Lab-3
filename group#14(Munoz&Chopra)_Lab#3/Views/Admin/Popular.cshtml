@model IEnumerable<group_14_Munoz_Chopra__Lab_3.Models.Episode>
@{
    ViewData["Title"] = "Most Popular Episodes";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="bi bi-star-fill me-2"></i>Most Popular Episodes
    </h2>

    @if (Model == null || !Model.Any())
    {
            <div class="alert alert-info">No episodes found.</div>
    }
    else
    {
            <table class="table table-hover shadow-sm align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Podcast</th>
                        <th>Host</th>
                        <th>Views</th>
                        <th>Release Date</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var episode in Model)
                {
                            <tr>
                                <td>@episode.Title</td>
                                <td>@episode.Podcast?.Title</td>
                                <td>@episode.Podcast?.Creator?.Username</td>
                                <td><span class="badge bg-primary">@episode.NumberOfViews</span></td>
                                <td>@episode.ReleaseDate.ToShortDateString()</td>
                            </tr>
                }
                </tbody>
            </table>
    }
</div>


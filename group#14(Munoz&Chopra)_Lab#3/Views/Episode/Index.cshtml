@model IEnumerable<group_14_Munoz_Chopra__Lab_3.Models.Episode>

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">All Episodes</h2>

    <!-- 🔹 ADD EPISODE BUTTON -->
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle me-1"></i> Add New Episode
    </a>

    @if (!Model.Any())
    {
            <div class="alert alert-info">No episodes found.</div>
    }
    else
    {
            <table class="table table-hover shadow-sm">
                <thead class="table-light">
                    <tr>
                        <th>Title</th>
                        <th>Podcast</th>
                        <th>Duration</th>
                        <th>Views</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var e in Model)
                {
                        <tr>
                            <td>@e.Title</td>
                            <td>@e.Podcast?.Title</td>
                            <td>@e.DurationMinutes mins</td>
                            <td>@e.NumberOfViews</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@e.EpisodeID"
                                   class="btn btn-sm btn-outline-success me-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="Delete" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this episode?');">
                                    <input type="hidden" name="id" value="@e.EpisodeID" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                }
                </tbody>
            </table>
    }
</div>
